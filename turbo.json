{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalDependencies": [
        "**/.env"
    ],
    "globalPassThroughEnv": [
        "PORT"
    ],
    "globalEnv": [
        "NEXT_PUBLIC_UNSPLASH_ACCESS_KEY",
        "NEXT_PUBLIC_LANDING_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_CLOUDINARY_USER_PRESET",
        "NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME",
        "SKIP_ENV_VALIDATION",
        "NEXT_PUBLIC_GAME_URL",
        "AUTH_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "NOTIFICATION_APPLICATION_IDENTIFIER"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "clean": {
            "cache": false
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "inputs": [
                ".env",
                ".env.local"
            ]
        }
    }
}
